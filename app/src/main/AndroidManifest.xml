<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rnd.plani.co.kr.whenyourepay">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar">
        </activity>
        <activity
            android:name=".Intro.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Intro.WalkthroughActivity" />
        <activity android:name=".Intro.IntroActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"/>
        <activity
            android:name=".BorrowMoney.LendMoneyActivity"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar" />
        <activity android:name=".Contact.MultiContactActivity" />
        <activity android:name=".Contact.SingleContactActivity" />
        <activity android:name=".DutchPay.DutchPayActivity" />
        <activity android:name=".OverDue.OverDueActivity" />
        <activity android:name=".BorrowThings.GalleryActivity"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar"></activity>
        <activity android:name=".BorrowThings.LendThingsActivity"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar"/>
        <activity android:name=".Transaction.DetailMoneyTrans.DetailMoneyTransactionActivity"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar"/>
        <activity android:name=".Transaction.DetailThingsTrans.DetailThingsTransactionActivity"/>
        <activity android:name=".Complete.CompleteActivity"/>
    </application>

</manifest>
